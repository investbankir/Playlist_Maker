<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlistItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginStart="@dimen/dimen16"
    android:layout_marginTop="@dimen/dimen16"
    android:layout_marginHorizontal="@dimen/dimen4"
    android:clickable="true">

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="@dimen/dimen160"
        android:layout_height="@dimen/dimen160"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_player_placeholder" />

    <TextView
        android:id="@+id/playlistNameItem"
        style="@style/PlaylistItemText"
        android:text="@string/PlaylistName"/>

    <TextView
        android:id="@+id/playlistQuantityItem"
        style="@style/PlaylistItemText"
        android:text="@string/quantityTracks"
        />

</LinearLayout>