<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsBackButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="icon">@drawable/ic_arrow_back</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:backgroundTint">@color/white</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:textFontWeight">500</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">@dimen/text22</item>
            <item name="cornerRadius">16dp</item>
            <item name="iconGravity">textStart</item>
            <item name="iconPadding">8dp</item>
            <item name="iconTint">@color/black</item>
        </style>

    <style name="MediumTextStyle">
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:textFontWeight">500</item>
            <item name="android:textColor">?attr/colorOnSecondary</item>
        </style>

    <style name="RegularTextStyle">
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textFontWeight">400</item>
        </style>

    <style name="TextInTheSettings">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_weight">1</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:paddingLeft">@dimen/medium_padding</item>
            <item name="android:textColor">?attr/colorOnSecondary</item>
            <item name="android:textSize">@dimen/textDimen16</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textFontWeight">400</item>
        </style>

    <style name="MenuBloksSettings">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_weight">1</item>
            <item name="android:orientation">horizontal</item>
        </style>

    <style name="ButtonsInTheSettings" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/light_gray</item>
        <item name="iconGravity">end</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconTint">@color/gray</item>
        </style>

    <style name="seach_hint">Поиск</style>

    <style name="Seach_Actity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="seachEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColor">@color/blackNight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/ic_background_search</item>
        <item name="android:drawableStart">@drawable/ic_search_et</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="trackName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textUnderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="dividingUnderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_dividing_point</item>
        <item name="tint">@color/gray</item>
    </style>

    <style name="trackArrowForward">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">19dp</item>
        <item name="tint">@color/gray</item>
    </style>
    <style name="textInfoTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="addTrackStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="layout_constraintBottom_toBottomOf">@id/playButton</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="layout_constraintTop_toTopOf">@id/playButton</item>
        <item name="srcCompat">@drawable/ic_addtrackplaylist</item>
    </style>
    <style name="favoriteStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>         
        <item name="srcCompat">@drawable/ic_favorite</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightBorder</item>
        <item name="layout_constraintTop_toTopOf">@id/playButton</item>
        <item name="layout_constraintBottom_toBottomOf">@id/playButton</item>
    </style>

    <style name="MLTableoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="newPlaylistEditText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/dimen15</item>
    </style>

    <style name="PlaylistItemText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen4</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="RectangleBottomSheet" >
        <item name="android:layout_width">@dimen/dimen50</item>
        <item name="android:layout_height">@dimen/dimen4</item>
        <item name="android:background">@drawable/ic_rectangle_bottom_sheet</item>
        <item name="android:layout_marginTop">@dimen/dimen8</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="PlaylistNameBS" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="playlistQuantityBS" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text11</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="clearButtonSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen12</item>
        <item name="android:layout_marginEnd">@dimen/dimen10</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="tint">@color/gray</item>
    </style>
    
    <style name="menuBottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_marginTop">@dimen/dimen8</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="menuBottomSheetParametrs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dimen16</item>
    </style>

</resources>


